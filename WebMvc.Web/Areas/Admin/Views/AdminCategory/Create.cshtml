@model WebMvc.Web.Areas.Admin.ViewModels.CategoryViewModel
@{
    ViewBag.Title = "Create Category";
}

@Html.Partial("_CategoryNavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("Create", "AdminCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()

            @Html.Partial("_CategoryFields", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Khởi tạo" class="btn btn-default" />
            </div>
        </div>
        }
    </div>
</div>

