@model WebMvc.Web.ViewModels.CreateEditTopicViewModel

@{
    ViewBag.Title = "Edit topic";
}

@Html.Partial("_TopicNavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>Edit Topic</h5>
    </div>
    <div class="panel-content">
        <div id="container">
            @using (Html.BeginForm("Edit", "AdminTopic", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(x => x.Id)

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Partial("_FieldsCreateEditTopic", Model)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
